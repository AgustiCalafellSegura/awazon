{% extends "frontend/base.html.twig" %}

{% block title %}{{ parent() }} Â· the neverending store{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm mb-5">
            <h1 class="display-1">awazon</h1>
            <div class="p-3 text-white bg-danger">the neverending store</div>
        </div>
    </div>
    <div class="row">
        {% for product in products %}
            <div class="col-sm">
                <div class="card" >
                    <img class="card-img-top" src="..." alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{  product.name }} - {{ product.price }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <a href="{{ path('app_frontend_product_detail', {slug: product.slug}) }}" class="btn btn-primary">BUY!</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
