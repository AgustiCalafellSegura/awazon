{% extends "frontend/base.html.twig" %}

{% block title %}{{ parent() }} Â· List of products added to cart {% endblock %}
<div class="row">
    <div class="col">
        <h1>Cart</h1>
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Units</th>
                </tr>
            </thead>
            <tbody>
            {% for session.get('cart') in item %}
                <tr>
                    <td>{{ item.product }}</td>
                    <td>{{ item.units }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% block body %}

{% endblock %}
