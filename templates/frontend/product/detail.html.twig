{% extends "frontend/base.html.twig" %}

{% block title %}{{ parent() }} Â· the neverending store{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-12 col-sm-4 col-md-3">
            <img src="{{ vich_uploader_asset(product.firstImage, 'imageFile') | imagine_filter('550xY') }}" class="img-fluid" alt="product.name">
        </div>
        <div class="col-12 col-sm-8 col-md-9">
            <h1>{{ product.name }}</h1>
            <p class="lead">
                {{ product.description }}
            </p>
            <button class="btn btn-primary" type="submit">Cart</button>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h3 class="mb-3">Reviews</h3>
            {% if product.reviews|length > 0 %}
                {% for review in product.reviews %}
                    <blockquote class="blockquote">
                        <p class="mb-0">{{ review.review }}</p>
                        <footer class="blockquote-footer">{{ review.createdAt|date('d-m-Y') }} <cite title="Source Title">{{ review.customer.name }}</cite></footer>
                    </blockquote>
                {% endfor %}
            {% else %}
                <div class="alert alert-warning" role="alert">
                    There are no reviews
                </div>
            {% endif %}
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h3 class="mb-3">Ratings</h3>
            {% if product.ratings|length > 0 %}
                <p>Total ratings: {{ product.ratings|length }}</p>
                <p>5 stars: {{ ratecounter[4] }}</p>
                <p>4 stars: {{ ratecounter[3] }}</p>
                <p>3 stars: {{ ratecounter[2] }}</p>
                <p>2 stars: {{ ratecounter[1] }}</p>
                <p>1 star: {{ ratecounter[0] }}</p>
            {% else %}
                <div class="alert alert-warning" role="alert">
                    There are no ratings
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
