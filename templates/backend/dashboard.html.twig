{% extends 'backend' %}

{% block title %}
    Dashboard
{% endblock %}

{% block body%}
    <h1>Dashboard</h1>
    <div class="row">
        <div class="col-xs-3">
            <table class="table">
                <thead>
                <tr>
                    <th>Rating</th>
                    <th>Product</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <th>{{ loop.index }}</th>
                        <th>{{ product.name }}</th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-xs-3">
            <table class="table">
                <thead>
                <tr>
                    <th>Rating</th>
                    <th>Customers</th>
                </tr>
                </thead>
                <tbody>
                {% for customer in customers %}
                    <tr>
                        <th>{{ loop.index }}</th>
                        <th>{{ customer[0].name }}</th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}