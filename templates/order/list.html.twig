{% extends 'base.html.twig' %}

{% block title %}
    Llistat d'imatges
{% endblock %}

{% block body%}
    <div class="row">
        <div class="col-xs-10">
            <h1>Imatges</h1>
            <table class="table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for image in images %}
                    <tr>
                        <td>{{ image.id }}</td>
                        <td>{{ image.image }}</td>

                        <td>
                            <a href="{{ path('app_image_update', {id: image.id}) }}">Actualitzar</a>
                            <a href="{{ path('app_image_delete', {id: image.id}) }}">Esborrar</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <hr>
            <p>
                <a class="btn btn-primary" href="{{ path('app_image_create') }}">+ New image</a>
            </p>
        </div>
    </div>

{% endblock %}